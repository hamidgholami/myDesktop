{
  "data-root": "/path/to/your/new/docker/root",
  "log-driver": "json-file",
  // "journald"
  "storage-driver": "overlay2",
  "live-restore": true,
  "default-ulimits": {
    "nofile": {
      "Name": "nofile",
      "Hard": 64000,
      "Soft": 64000
    }
  },
  "mtu": 1500,
  "bip": "10.10.0.5/24",
  "fixed-cidr": "192.168.1.0/25",
  "default-address-pools": [
    {
      "base": "172.253.0.0/16",
      "size": 24
    }
  ],
  "dns": [
    "192.168.1.1"
  ],
  "insecure-registries": [
    "mycompany.registry.com"
  ],
  "registry-mirrors": [
    "http://mycompany.registry.com"
  ],
  "exec-opts": [
    "native.cgroupdriver=systemd"
  ],
  "selinux-enabled": false,
  "max-concurrent-downloads": 3,
  "max-concurrent-uploads": 5,
  "max-download-attempts": 5,
  "raw-logs": false,
  "log-opts": {
    // https://docs.docker.com/config/containers/logging/configure/
    "cache-disabled": "false",
    "cache-max-file": "5",
    "cache-max-size": "20m",
    "cache-compress": "true",
    "max-size": "5m",
    "max-file": "1",
    "compress": "true",
    "label": "myDesktop"
  }
}
